
<div id="modalGlobal" class="modal @modalClass" tabindex="-1" role="dialog" style="display:@modalDisplay;">
        <div id="dv-overlay">
            <div class="modal-dialog modal-dialog-centered" role="document" style="width:@Width">
                <div class="modal-content">
                    <div class="modal-header">
            @Title
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

                    @Body

                 
                </div>
            </div>
        </div>
    </div>

    @if (showBackdrop)
    {
        <div class="modal-backdrop fade show"></div>
    }

@code {


    [Parameter]
    public RenderFragment? Title { get; set; }

    [Parameter]
    public RenderFragment? Body { get; set; }

    [Parameter]
    public string Width { get; set; } = "400px";

    private string modalDisplay = "none;";
    private string modalClass = "";
    private bool showBackdrop = false;

    public async Task Open()
    {
        modalDisplay = "block;";
        modalClass = "show";
        showBackdrop = true;
        await Task.Delay(300);
        StateHasChanged();
    }

        public void Close()
        {
            modalDisplay = "none";
            modalClass = "";
            showBackdrop = false;
        }

    }
